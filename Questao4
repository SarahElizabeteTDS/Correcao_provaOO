<?php

$array = array();
$par = 0;
$impar = 0;

for ($i=0; $i < 10; $i++) 
{ 
    $num = readline("Informe um número: ");
    array_push($array, $num);
}

foreach($array as $elemento)
{
    if ($elemento % 2 == 0) 
    {
        $par += $elemento;
    }else{
        $impar += $elemento;
    }
}

print "A soma dos pares é: " . $par . "\n";
print "A soma dos impares é: " . $impar . "\n";
